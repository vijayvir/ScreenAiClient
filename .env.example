# =====================================================
# ScreenAI Client - Environment Configuration
# =====================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =====================================================

# =====================================================
# SERVER CONNECTION
# =====================================================
# WebSocket server URL for screen sharing
SCREENAI_SERVER_URL=ws://localhost:8080/screenshare

# HTTP server URL for REST API (authentication, etc.)
SCREENAI_HTTP_URL=http://localhost:8080

# =====================================================
# RECONNECTION SETTINGS
# =====================================================
RECONNECT_ATTEMPTS=3
RECONNECT_DELAY_MS=5000
CONNECTION_TIMEOUT_MS=10000

# =====================================================
# VIDEO SETTINGS
# =====================================================
VIDEO_FRAME_RATE=30
VIDEO_BITRATE_KBPS=2500
VIDEO_QUALITY=high

# =====================================================
# BUFFER SIZES
# =====================================================
MAX_TEXT_MESSAGE_BUFFER_SIZE=131072
MAX_BINARY_MESSAGE_BUFFER_SIZE=10485760
DECODER_MAX_BUFFER_SIZE=500000
DECODER_MAX_BUFFER_TIME_MS=200

# =====================================================
# PERFORMANCE MONITORING
# =====================================================
MONITOR_CPU=true
MONITOR_MEMORY=true
MONITOR_NETWORK=true

# =====================================================
# HTTP CLIENT SETTINGS
# =====================================================
HTTP_CONNECT_TIMEOUT_SECONDS=10
HTTP_REQUEST_TIMEOUT_SECONDS=30

# =====================================================
# SECURITY - TOKEN ENCRYPTION
# =====================================================
# AES-256 encryption key for storing refresh tokens locally
# Generate with: openssl rand -base64 32
# IMPORTANT: Change this for production!
TOKEN_ENCRYPTION_KEY=your-256-bit-encryption-key-change-me-now

# =====================================================
# CREDENTIALS STORAGE
# =====================================================
# Directory for storing encrypted credentials (default: ~/.screenai)
CREDENTIALS_STORAGE_DIR=~/.screenai
